# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_size = 4
end_of_line = lf

# Blade templates
[*.blade.php]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CSS/SCSS/Less files
[*.{css,scss,less}]
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
